<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_padding">
    <TextView
        android:layout_width="@dimen/list_title"
        android:layout_height="@dimen/list_title"
        android:textSize="@dimen/list_title_text"
        android:layout_margin="@dimen/list_padding"
        android:gravity="center"
        android:background="@color/list_title"
        android:textColor="@color/text_icons"
        android:text="LA"
        android:id="@+id/list_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_padding"
        android:textSize="@dimen/list_text_name"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_icons"
        android:text="Song Name"
        android:id="@+id/list_text_name" />

</LinearLayout>